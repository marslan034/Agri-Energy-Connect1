@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1>Welcome to Agri-Energy Connect</h1>
        <p class="lead">Empowering farmers and employees through smart data.</p>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <img src="https://via.placeholder.com/500x250?text=Farmer+Portal" class="card-img-top" alt="Farmer">
                <div class="card-body">
                    <h5 class="card-title">Farmer Portal</h5>
                    <p class="card-text">Add and manage your agricultural products. Track production data easily.</p>
                    <a href="/Farmer/Dashboard" class="btn btn-primary">Farmer Dashboard</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <img src="https://via.placeholder.com/500x250?text=Employee+Portal" class="card-img-top" alt="Employee">
                <div class="card-body">
                    <h5 class="card-title">Employee Portal</h5>
                    <p class="card-text">View and filter products from all farmers. Manage data effectively.</p>
                    <a href="/Employee/Dashboard" class="btn btn-success">Employee Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div>
